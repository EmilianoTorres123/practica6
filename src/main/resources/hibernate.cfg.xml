<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/practica_3</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Totita123.</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property> <!--Hace un comparativo con las clases y lo convierte en SQL-->
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property> <!--Es recomendable en lugar de update seria CREATE-->
         
         <!-- add annotated resources here -->
        <mapping class="org.uv.porograma_06.Venta"/>
        <mapping class="org.uv.porograma_06.DetalleVenta"/>

    </session-factory>
</hibernate-configuration>





